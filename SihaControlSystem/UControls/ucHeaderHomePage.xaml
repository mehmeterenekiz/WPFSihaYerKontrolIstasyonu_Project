<UserControl x:Class="SihaControlSystem.UControls.ucHeaderHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SihaControlSystem.UControls"
             mc:Ignorable="d" 
                          d:DesignHeight="170" d:DesignWidth="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#134187" >
            <Grid x:Name="content_header">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center" Margin="30,0,0,0" Grid.ColumnSpan="2">
                    <Label FontSize="16" FontFamily="Times New Roman" Foreground="White">HOŞGELDİNİZ</Label>
                </StackPanel>

                <Border x:Name="content_header_siha" Grid.Column="0" RenderTransformOrigin="0.5,0.5" Margin="165,-3,272,42" Grid.ColumnSpan="3">

                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="30.714"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <Border.Background>
                        <ImageBrush ImageSource="/images/windows/sihasolust.png"/>
                    </Border.Background>

                </Border>

                <Border Grid.Column="2">
                    <Border.Background>
                        <ImageBrush ImageSource="/images/windows/sagust.png"/>
                    </Border.Background>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>