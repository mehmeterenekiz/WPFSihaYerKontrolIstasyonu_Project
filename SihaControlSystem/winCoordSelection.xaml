<Window x:Class="SihaControlSystem.winCoordSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SihaControlSystem"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        mc:Ignorable="d"
        Title="winCoordSelection" Height="450" Width="800" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Canvas>
            <Label Content="Hedef Koordinatı Seçiniz"  Panel.ZIndex="2" Canvas.Left="175" Canvas.Top="65" Background="#00000000" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontWeight="Bold" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Style="{DynamicResource blinklabel}"/>
            <Rectangle Height="33" Width="450" Canvas.Left="175" Canvas.Top="65" Fill="#FF134187" Panel.ZIndex="1" x:Name="dragPanel" MouseDown="dragPanel_MouseDown"/>

            <Border Height="320" Width="450" Canvas.Left="175" Canvas.Top="65" Background="#FFDFDFDF" CornerRadius="0,0,50,50" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.35" Direction="275"/>
                </Border.Effect>
            </Border>

            <!-- Sağ Panel -->
            <Border Grid.Column="1" Background="Gray" Canvas.Left="205" Canvas.Top="116" Height="225" Width="390" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <gmap:GMapControl Name="gmapControl"
                   Margin="5"
                   Loaded="gmapControl_Loaded" />
            </Border>

            <StackPanel  Canvas.Left="235" Canvas.Top="346">
                <TextBlock x:Name="enlem">
                    
                </TextBlock>

                <TextBlock x:Name="boylam">
                    
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Canvas.Left="415" Canvas.Top="345" VerticalAlignment="Top">
                <Button Content="Kaydet" Width="80" Margin="5" Cursor="Hand" x:Name="btn_winsavecoord" Click="btn_winsavecoord_Click"/>
                <Button Content="İptal" Width="80" Margin="5" x:Name="btn_winclosecoord" Click="btn_winclosecoord_Click" Cursor="Hand"/>
            </StackPanel>

            <Button Content="X" x:Name="btn_close" Click="btn_close_Click" Style="{DynamicResource minibutonlarwins}" HorizontalAlignment="Left" Canvas.Left="590" Canvas.Top="65.5" VerticalAlignment="Top" Height="32.3" Width="35.2" Panel.ZIndex="2"/>
        </Canvas>
    </Grid>
</Window>
